# -*- mode: gitconfig; -*-

[user]
  name = Fran Casas
  email = nflamel@gmail.com
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  editor = nvim
[merge]
  tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED
[difftool]
  prompt = false
[diff]
  tool = vimdiff
[apply]
  whitespace = fix
[format]
  pretty = %Cred%h%Creset - %s%nby %C(bold blue)%an%Creset %C(yellow)%d%Creset%non %Cgreen(%cD)%n%b
[alias]
  amend = commit --amend --no-edit
  cm = commit -m
  co = checkout
  l = ll -n 10
  last = diff HEAD~1
  ll = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)'
  lll = log --graph
  nb = checkout -b
  ri = rebase -i
  rim = rebase -i master
  s = status --short -b
  todo = ! git diff master | grep TODO
  wtf = log -p --word-diff
[push]
  default = current
[rebase]
  autosquash = true
[rerere]
  enabled = true
[include]
  path = ~/.gitconfig_local
