# -*- mode: shell-script; -*-

# Add rbenv shims first so that emacs gets the right ruby version. Emacs loads
# on a non interactive (login) shell. That's why PATH needs to be loaded there
# so that it works.
export PATH=$HOME/.rbenv/shims:$BASIC_PATH
export PATH=/usr/local/heroku/bin:$PATH

# Load autojump from homebrew
if [[ -s $(brew --prefix)/etc/profile.d/autojump.sh ]]; then
    . $(brew --prefix)/etc/profile.d/autojump.sh
fi

# Load nvm from homebrew
export NVM_DIR=~/.nvm
if [[ -s $(brew --prefix nvm)/nvm.sh ]]; then
   source $(brew --prefix nvm)/nvm.sh
fi
