export ZSH=$HOME/.oh-my-zsh
export ZSH_THEME="sunrise"
export DISABLE_AUTO_TITLE=true
# Set Vim as the default editor
export EDITOR='vim'

plugins=(git github gem rails3 bundler rbenv vundle)

source $ZSH/oh-my-zsh.sh

if [[ -z $TMUX ]]; then
  export PATH="$HOME/bin:$HOME/.rbenv/bin:/usr/local/bin:/usr/local/sbin:$PATH"
  eval "$(rbenv init -)"
  ### Added by the Heroku Toolbelt
  export PATH="/usr/local/heroku/bin:$PATH"
fi

export RBENV_ROOT="$HOME/.rbenv"


# Load tmuxinator
[[ -s $HOME/.tmuxinator/scripts/tmuxinator ]] && source $HOME/.tmuxinator/scripts/tmuxinator

# Load NVM
[[ -s /home/flamel/.nvm/nvm.sh ]] && . /home/flamel/.nvm/nvm.sh


# Aliases
alias rake="bundle exec rake"
alias migrate="rake db:migrate db:test:clone"
alias cu='bundle exec cucumber'
alias tcu='CUCUMBER_FORMAT=pretty bundle exec cucumber'
alias cucumber='bundle exec cucumber'
alias rspec='bundle exec rspec'
# Ubuntu sucks sometimes...
if hash ack-grep; then
  alias ack='ack-grep'
fi

export HIPCHAT_USER="Francisco J. Casas"
