# -*- mode: shell-script; -*-

# This file is meant to load only things which are needed on an interactive
# shell, like customizations, special aliases, etc.

# oh-my-zsh specific configuration.
export ZSH=$HOME/.oh-my-zsh
export ZSH_THEME="minimal"
plugins=(git gem rails common-aliases vi-mode ssh-agent)

source $ZSH/oh-my-zsh.sh
zstyle :omz:plugins:ssh-agent agent-forwarding on

# Rails plugin creates this alias but it conflicts with ripgrep command name.
unalias rg

# With this, apps using $EDITOR will use terminal emacs.
export EDITOR='nvim'
export VISUAL=$EDITOR

# Aliases
alias be='bundle exec'
alias bi='bundle install'
alias bu='bundle update'

# noglob needed for rake + zsh
alias rake='noglob bundle exec rake'
alias br='bin/rspec'
alias bs='bin/spring'
alias rspec='bundle exec rspec'
alias r='rspec'
alias e=$EDITOR
alias vi=$EDITOR

eval "$(hub alias -s)"

[[ -f $HOME/.zshrc_local ]] && source $HOME/.zshrc_local
