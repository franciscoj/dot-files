# Path oh-my-zsh configuration.
export ZSH=$HOME/.oh-my-zsh

export ZSH_THEME="eastwood"

plugins=(cap thor brew github git gem rails rails3 osx pow rvm)

source $ZSH/oh-my-zsh.sh

export PATH="~/bin:/usr/local/Cellar/bin:/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:/usr/local/git/bin::$PATH"

# Load android-sdk installed from homebrew
export ANDROID_SDK_ROOT=/usr/local/Cellar/android-sdk/r6
# Node.js load path
export NODE_PATH=/usr/local/lib/node_modules
# Set macvim as the default editor
export EDITOR='/usr/local/bin/mvim -f'

# Load RVM
rvm_project_rvmrc=1
unsetopt auto_name_dirs
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

export AUTOFEATURE=true

alias pautotest="autotest -p"
alias pmigrate="rake db:migrate parallel:prepare"
alias migrate="rake db:migrate db:test:clone"
alias gt="NO_LEGACY=true guard -g test"
alias cw="rake cucumber:wip"
alias p="powder"
alias annotate="annotate --exclude tests,fixtures --position after --show-indexes --simple-indexes"
alias be="bundle exec"
alias rst="touch tmp/restart.txt"
alias git="hub"

alias gcruby='ruby'
alias gcrake='rake'
alias gcgem='gem'
alias gcirb='irb'
alias gcrails='rails'

alias rvmnginx='rvmsudo /opt/nginx/sbin/nginx'
alias nginxconf='_ mvim /opt/nginx/conf/nginx.conf'
alias redisserv='redis-server /usr/local/etc/redis.conf'
