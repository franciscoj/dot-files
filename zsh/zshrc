# -*- mode: shell-script; -*-

# This file is meant to load only things which are needed on an interactive
# shell, like them customizations, special aliases, etc.

# oh-my-zsh specific configuration.
export ZSH=$HOME/.oh-my-zsh
export ZSH_THEME="sunrise"
plugins=(git github gem rails rbenv autojump common-aliases)
source $ZSH/oh-my-zsh.sh

# I want to title my shells by myself.
export DISABLE_AUTO_TITLE=true
export EDITOR="emacsclient -nw -a ''"

# Aliases
alias be='bundle exec'
alias bi='bundle install'
alias bu='bundle update'
alias rake='noglob bundle exec rake' # noglob needed for rake + zsh
alias ra='rake'
alias rspec='bundle exec rspec'
alias r='rspec'
