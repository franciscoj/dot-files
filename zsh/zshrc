# -*- mode: shell-script; -*-

# This file is meant to load only things which are needed on an interactive
# shell, like customizations, special aliases, etc.

# oh-my-zsh specific configuration.
export ZSH=$HOME/.oh-my-zsh
export ZSH_THEME="sunrise"
plugins=(git gem rails rbenv autojump common-aliases)
source $ZSH/oh-my-zsh.sh

# Aliases
alias be='bundle exec'
alias bi='bundle install'
alias bu='bundle update'
alias rake='noglob bundle exec rake' # noglob needed for rake + zsh
alias ra='rake'
alias rspec='bundle exec rspec'
alias r='rspec'
alias e=$EDITOR
alias ec='e -c'
alias vi='e'

eval "$(hub alias -s)"

# NVM needs this to work.
unset PREFIX

# Load the rest depending on the system
dot_files_load zshrc

