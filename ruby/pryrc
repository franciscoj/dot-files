# vim FTW
Pry.config.editor = "mvim"

# Prompt with ruby version
Pry.prompt = [lambda { |obj, nest_level| "#{RUBY_VERSION} (#{obj}):#{nest_level} > " }, lambda { |obj, nest_level| "#{RUBY_VERSION} (#{obj}):#{nest_level} * " }]

%w{hirb}.each { |gem| require gem }

load File.dirname(__FILE__) + '/.railsrc' if defined?(Rails) && Rails.env
