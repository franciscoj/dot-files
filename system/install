#}

## arg 1:  the new package version
post_install() {
   printf "\n\n\n\n\n\n\n\n\n\n\n\n\n\n"

   echo "******************************************************"
   echo "# Remember to run pacdiff to install the new config. #"
   echo "******************************************************"
}

